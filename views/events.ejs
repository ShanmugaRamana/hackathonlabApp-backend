<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Events</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        .dynamic-row {
            display: flex;
            gap: 10px;
            margin-bottom: 10px;
            align-items: center;
            flex-wrap: wrap;
        }
        
        .timeline-row input, .timeline-row select {
            flex: 1;
            min-width: 150px;
        }
        
        .points-row {
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 4px;
        }
        
        .points-group {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }
        
        .points-group label {
            font-size: 12px;
            color: #666;
        }
        
        .remove-btn {
            background: #dc3545;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 12px;
            cursor: pointer;
            font-size: 16px;
            min-width: 40px;
        }
        
        .remove-btn:hover {
            background: #c82333;
        }
        
        .button-secondary {
            background: #6c757d;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
        }
        
        .button {
            background: #007bff;
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <h1 class="logo">HackathonLab</h1>
            <nav class="menu">
                <a href="/dashboard" class="menu-item">
                    <span class="icon">üöÄ</span>
                    Dashboard
                </a>
                <a href="/dashboard/roles" class="menu-item">
                    <span class="icon">üõ°Ô∏è</span>
                    Role Requests
                </a>
                <a href="/dashboard/events" class="menu-item active">
                    <span class="icon">üìÖ</span>
                    Events
                </a>
            </nav>
        </aside>
        <main class="main-content">
            <header class="header">
                <h2>Create New Event</h2>
            </header>
            <section class="content">
                <div class="card">
                    <form action="/dashboard/events" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="eventName">Event Name</label>
                            <input type="text" id="eventName" name="eventName" required>
                        </div>

                        <div class="form-group">
                            <label for="thumbnail">Thumbnail Image</label>
                            <input type="file" id="thumbnail" name="thumbnail" accept="image/*" required>
                        </div>

                        <div class="form-group">
                            <label for="description">Event Description</label>
                            <textarea id="description" name="description" rows="4" required></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label for="registrationDeadline">Last Date of Registration</label>
                            <input type="date" id="registrationDeadline" name="registrationDeadline" required>
                        </div>

                        <div class="form-group">
                            <label>Event Timeline</label>
                            <div id="timeline-container">
                                <!-- Timeline items will be added here -->
                            </div>
                            <button type="button" id="add-timeline-btn" class="button-secondary">Add Timeline Item</button>
                        </div>

                        <div class="form-group">
                            <label>Points Structure</label>
                            <div id="points-container">
                                <!-- Points items will be added here -->
                            </div>
                            <button type="button" id="add-points-btn" class="button-secondary">Add Points Field</button>
                        </div>

                        <div class="form-group">
                            <label for="websiteLink">Event Website Link</label>
                            <input type="url" id="websiteLink" name="websiteLink">
                        </div>

                        <div class="form-group">
                            <label for="formLink">College Google Form Link</label>
                            <input type="url" id="formLink" name="formLink">
                        </div>

                        <button type="submit" class="button">Create Event</button>
                    </form>
                </div>
            </section>
        </main>
    </div>

    <script>
        let timelineIndex = 0;
        let pointsIndex = 0;

        document.getElementById('add-timeline-btn').addEventListener('click', () => {
            const container = document.getElementById('timeline-container');
            const newRow = document.createElement('div');
            newRow.classList.add('dynamic-row', 'timeline-row');
            newRow.innerHTML = `
                <input type="text" name="timeline[${timelineIndex}][description]" placeholder="Description" required class="timeline-desc">
                <input type="date" name="timeline[${timelineIndex}][fromDate]" title="From Date" required class="timeline-date">
                <input type="date" name="timeline[${timelineIndex}][toDate]" title="To Date" required class="timeline-date">
                <select name="timeline[${timelineIndex}][mode]" required class="timeline-mode">
                    <option value="">Select Mode</option>
                    <option value="Online">Online</option>
                    <option value="Offline">Offline</option>
                </select>
                <button type="button" class="remove-btn" onclick="removeRow(this)">√ó</button>
            `;
            container.appendChild(newRow);
            timelineIndex++;
        });

        document.getElementById('add-points-btn').addEventListener('click', () => {
            const container = document.getElementById('points-container');
            const newRow = document.createElement('div');
            newRow.classList.add('dynamic-row', 'points-row');
            newRow.innerHTML = `
                <input type="text" name="points[${pointsIndex}][round]" placeholder="Round Description" required class="points-desc" style="width: 100%; margin-bottom: 10px;">
                <div style="display: flex; gap: 20px;">
                    <div class="points-group">
                        <label>1st & 2nd Year Points</label>
                        <input type="number" name="points[${pointsIndex}][juniorPoints]" placeholder="Points" required>
                    </div>
                    <div class="points-group">
                        <label>3rd & 4th Year Points</label>
                        <input type="number" name="points[${pointsIndex}][seniorPoints]" placeholder="Points" required>
                    </div>
                </div>
                <button type="button" class="remove-btn" onclick="removeRow(this)" style="margin-top: 10px;">√ó</button>
            `;
            container.appendChild(newRow);
            pointsIndex++;
        });

        function removeRow(button) {
            button.parentElement.remove();
        }

        // Add initial timeline and points items
        document.addEventListener('DOMContentLoaded', () => {
            // Add one timeline item by default
            document.getElementById('add-timeline-btn').click();
            // Add one points item by default
            document.getElementById('add-points-btn').click();
        });
    </script>
</body>
</html>