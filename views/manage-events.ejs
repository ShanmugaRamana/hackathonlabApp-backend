<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Manage Events</h1>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">All Existing Events</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="eventsTable" class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>Event Name</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>Participants</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(events && events.length > 0) { %>
                    <% events.forEach(event => { %>
                      <tr>
                        <td><strong><%= event.name %></strong></td>
                        <td><%= new Date(event.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></td>
                        <td><%= event.location %></td>
                        <td>
                          <% if (event.status === 'upcoming') { %>
                            <span class="badge badge-primary">Upcoming</span>
                          <% } else if (event.status === 'ongoing') { %>
                            <span class="badge badge-success">Ongoing</span>
                          <% } else if (event.status === 'past') { %>
                            <span class="badge badge-secondary">Past</span>
                          <% } else { %>
                            <span class="badge badge-light"><%= event.status %></span>
                          <% } %>
                        </td>
                        <td class="text-center"><%= event.participants.length %></td>
                        <td>
                          <a href="#" class="btn btn-sm btn-info mr-2">
                            <i class="fas fa-eye"></i> View
                          </a>
                          <form action="/dashboard/events/delete/<%= event._id %>?_method=POST" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this event? This cannot be undone.');">
                             <button type="submit" class="btn btn-sm btn-danger">
                               <i class="fas fa-trash"></i> Delete
                             </button>
                          </form>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="6" class="text-center">No events found.</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
      </div>
    </div>
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('partials/footer') %>

